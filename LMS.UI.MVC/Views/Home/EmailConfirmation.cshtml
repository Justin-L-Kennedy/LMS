            </div>
        </div>
    </div>
</section>
<!-- /contact -->
<!-- gmap -->
<section class="section pt-0">
    <!-- Google Map -->
    <div id="map_canvas" data-latitude="39.0512504" data-longitude="-94.8531702"></div>
</section>
<!-- /gmap -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
